- flash.each do |key, value|
  .content
    - if key.to_s == 'alert'
      .alert.alert-danger.text-center{role: 'alert'}
        %button.close{ data: { dismiss: 'alert' } }
          %span &times;
        %span.text-semibold
          = value
    - else
      .alert.alert-info.text-center
        %button.close{ data: { dismiss: 'alert' } }
          %span &times;
        %span.text-semibold
          = value