= content_for :title do
  = @category.name
  купить Украина
.columns-container
  #columns.container
    / breadcrumb
    - breadcrumb :category, @category
    .row
      = render 'sidebar'
      / Center colunm
      #center_column.center_column.col-xs-12.col-sm-9
        / view-product-list
        #view-product-list.view-product-list
          %h2.page-heading
            %span.page-heading-title= @category.name
          %ul.display-product-option
            %li.view-as-grid.selected
              %span grid
            %li.view-as-list
              %span list
          / PRODUCT LIST
          %ul.row.product-list.grid
            = render 'products_list'
            %div
              = paginate @products, :theme => 'twitter-bootstrap-3', remote: true
