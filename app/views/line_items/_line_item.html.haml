%li.product-info
  .p-left
    = link_to '', line_item, method: :delete, class: 'remove_link'
    = link_to category_product_path(line_item.product.category, line_item.product) do
      = image_tag line_item.product.image.url(:thumb), class: 'img-responsive', alt: "#{line_item.product.name}"
  .p-right
    %p.p-name= line_item.product.name
    %p.p-rice= number_to_currency(line_item.total_price, locale: :uk)
    - if line_item.size.present?
      %p
        Размер:
        = line_item.size
    %p
      К-во:
      = line_item.quantity