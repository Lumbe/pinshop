%footer#footer
  .container
    #introduce-box.row
      .col-md-3
        #address-box
          #address-list
            .footer-phone
              = fa_icon('phone')
              +38 (096) 88-69-888
            .footer-email
              = fa_icon('envelope')
              pin-shop@mail.ua
      .col-md-6
        .row
          .col-sm-6
            .introduce-title Молодежная одежда
            %ul#introduce-Account.introduce-list
              - @categories.each do |category|
                %li
                  = link_to category do
                    = category.name
          .col-sm-6
            .introduce-title Меню
            %ul#introduce-company.introduce-list
              %li
                = link_to 'Главная', root_path
              %li
                = link_to 'Доставка и оплата', delivery_path
              %li
                = link_to 'Распродажа', discount_path
              %li
                = link_to 'Оптовым покупателям', wholesale_path
              %li
                = link_to 'Контакты', contacts_path
      .col-md-3
        #contact-box
          .introduce-title Узнай первым о новых поступлениях
          #mail-box.input-group
            %input{:placeholder => "Ваш e-mail", :type => "text"}/
            %span.input-group-btn
              %button.btn.btn-default{:type => "button"} OK
          .social-link
            %a{:href => "#"}
              %i.fa.fa-facebook
            %a{:href => "#"}
              %i.fa.fa-vk
